<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.oken1.modules.calendar.dao.CalendarEventCategoryDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.oken1.modules.calendar.entity.CalendarEventCategoryEntity" id="calendarEventCategoryMap">
        <result property="id" column="id"/>
        <result property="gameId" column="game_id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
    </resultMap>

    <!--类目列表-->
    <select id="getCategoryList" resultType="map">
        select id, name, code
        from calendar_event_category c where c.game_id = #{gameId}
    </select>
</mapper>